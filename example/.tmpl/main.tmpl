@require"std/convert"
@require"std/io"

fn factorial(int n) : int {
    if (n == 0) return 1;
    if (n == 1) return 1;
    return n * factorial(n - 1);
}

->main {
    var float PI = 3.1415;
    var int factor = 1;
    return PI + itof(factor);
}

->fact {
    var int res = factorial(5);
    println("Factorial of 5 is " + itos(res));
    return res;
}

